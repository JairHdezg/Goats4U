<div class="container">
  <div class="row">
    <div class="column">
      <%= simple_form_for @goat do |f| %>
        <%= f.input :name %>
        <%= f.input :age %>
        <%= f.input :breed %>
        <%= f.input :job %>
        <%= f.button :submit, class: 'btn btn-primary'%>
      <% end %>
    </div>
    <div class="column">
      <%= simple_form_for @goat do |f| %>
        <%= f.input :city %>
        <%= f.input :description %>
        <%= f.input :price_par_day %>
        <%= f.input :photo, as: :file %>
      <% end %>
    </div>
  </div>
</div>