<!-- NAVBAR -->
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon transparent">
    <%= link_to "Goats4U", goats_path, class: "navbar-brand", class: "text-white ml-5" %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <form action = "/goats" method= "GET" class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2 transparent-input" type="search" placeholder="Find a goat.." aria-label="Search" name="query" value="<%= @query %>">
        <button class="btn btn-success my-2 my-sm-0 mr-2" type="submit">Search</button>
      </form>

      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <%= cl_image_tag current_user.photo.key,gravity: :face, class: "rounded-circle avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "btn btn-primary" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <!-- NAVBAR -->
