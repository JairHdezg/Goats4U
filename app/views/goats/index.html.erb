<div class="d-flex">
  <div class="map-index">


  </div>
  <div class="cards">
    <div class="container">
      <h2 class="my-4">All our goats</h2>
      <div class="row justify-content-center card-display">
        <% @goats.each do |goat| %>
        <div class="col-10 col-md-6 my-3">
          <%= link_to goat_path(goat) do %>
          <div class="card-category d-flex align-items-end justify-content-between rounded" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.5)), url('<%= cl_image_path goat.photo.key, height: 300, width: 400, crop: :fill %>')">
            <div class="p-2 mb-2">
              <h2><%= goat.name %></h2>
              <p><%= goat.job %></p>
            </div>
            <div class="p-2 mb-1">
              <p><%= goat.city %></p>
              <h2 class="card-category-pricing"><%= "$ #{goat.price_par_day}" %></h2>
            </div>
          </div>
          <% end %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
