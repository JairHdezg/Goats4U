<div class="container-fluid">
  <div class="container">
    <div class="row align-items-start mb-5">
      <div class="card-category col-10 col-md-6 col-lg-4 d-flex justify-content-center align-items-end rounded" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.3)), url('<%= cl_image_path @goat.photo.key, height: 300, width: 400, crop: :fill %>')">
        <h1><%= @goat.name %></h1>
      </div>
    </div>
    <div class="row mb-3 align-items-start ">
      <div class="col-10 col-md-6 col-lg-4 justify-content-between rounded">
        <%= simple_form_for [@goat, @rental] do |f| %>
          <%= f.input :start_date, as: :date %>
          <%= f.input :end_date, as: :date %>
          <%= f.button :submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
